<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_die_roller.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Die Type: " /><Picker x:Name="dieTypePicker" />

            <Label Text="# Dice: " /><Entry x:Name="numDiceEntry" />

            <Button Text="Roll" x:Name="btnRoll" Command="onClick" />

            <Label Text="" x:Name="lblOut" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

